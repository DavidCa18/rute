  <script>
    cargarVehiculos();
    cargarPeriodos();

    var id;
    var markers = {};
    var map;
    var currentId = 0;
    var marcadores = [];

    function uniqueId() {
      return ++currentId;
    }

    function initMap() {

      map = new google.maps.Map(document.getElementById('map'), {
        center: { lat: -0.213814, lng: -78.504127 },
        zoom: 12
      });

      map.addListener('click', function (e) {
        uniqueId();
        setMarker(e.latLng, currentId);
      });

    }

    function removeMarker(markerId) {
      if (markers[markerId]) {
        markers[markerId].setMap(null);
        delete markers[markerId];

        eliminarPosicion(markerId);
      }
    }

    function setMarker(position, markerId) {
      var temp_marker = new google.maps.Marker({
        position: position,
      });
      temp_marker.setMap(map);
      temp_marker.metadata = { id: markerId };
      markers[markerId] = temp_marker;

      marcadores.push({ id: markerId, latitud: markers[markerId].position.lat(), longitud: markers[markerId].position.lng() });

      google.maps.event.addListener(temp_marker, "rightclick", function (point) { removeMarker(markerId); });
    }


    function cargarVehiculos() {
      $("#vehiculos").kendoComboBox({
        placeholder: "Seleccionar Vehículo",
        dataTextField: "text",
        dataValueField: "value",
        filter: "contains",
        minLength: 2,
        dataSource: {
          serverFiltering: true,
          transport: {
            read: {
              url: "/buscarVehiculoCombo",
              dataType: "json",
              type: "GET"
            }
          }
        }
      });
    }

    function cargarPeriodos() {
      $("#periodo").kendoComboBox({
        placeholder: "Seleccionar Periodo",
        dataTextField: "text",
        dataValueField: "value",
        filter: "contains",
        minLength: 2,
        dataSource: [
        { text: "2019-2020", value: "2019-2020" },
        { text: "2020-2021", value: "2020-2021" },
        { text: "2018-2019", value: "2018-2019" },
        { text: "2017-2018", value: "2017-2018" },
        { text: "2016-2017", value: "2016-2017" },
        ]
      });
    }

    $("#guardarRuta").click(function () {

      var vehiculo = $("#vehiculos").val();
      var periodo = $("#periodo").val();
      var htmlOut = "";
      for (let i = 0; i < marcadores.length; i++) {
        htmlOut += "(" + "'" + marcadores[i].latitud + "','" + marcadores[i].longitud + "','" + periodo + "','" + vehiculo + "'),";
      }

      var data = (htmlOut.substr(0, (htmlOut.length - 1)));

      if (vehiculo == "" || vehiculo == null || vehiculo == undefined) {
        alert('Seleccionar un Vehículo');
      } else if (periodo == "" || periodo == null || periodo == undefined) {
        alert('Ingresar un Periodo');
      } else if (marcadores.length == 0) {
        alert('Ingresar marcadores en el mapa');
      } else {
        $.ajax({
          type: "GET",
          url: "/guardarRuta",
          data: { valores: data },
          success: function (responseText) {
            alert('La ruta trazada se guardo exitosamente');
            location.reload();
          }
        }).fail(function (xhr, ajaxOptions, thrownError) {
          console.log('Error al Guardar Cargo', 'Gestión Cargo');
        });
      }

    });

    function eliminarPosicion(idMarcador) {
      for (var i = 0; i < marcadores.length; i++) {
        if (marcadores[i].id == idMarcador) {
          marcadores.splice(i, 1);
          break;
        }
      }
    }
  </script>

