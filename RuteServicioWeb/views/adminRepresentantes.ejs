            dataType: "json",
            type: "POST",
            complete: function (e) {
              $("#grid").data("kendoGrid").dataSource.read();
            }
          },
          parameterMap: function (options, operation) {
            if (operation !== "read" && options.models) {
              var datos = options.models[0];
              return datos;
            }
          }
        },
        error: function (e) {
          alert("No se puede eliminar ya que depende de otros registros");
        },
        batch: true,
        pageSize: 20,
        schema: {
          model: {
            id: "idRepresentante",
            fields: {
              idRepresentante: { editable: false, nullable: true },
              identificacion: {
                validation: {
                  required: true,
                 
                  identificacionvalidation: function (input) {
                    if (input.is("[name='identificacion']") && input.val() != "") {
                      if (digitoVerificador(input.val()) == false) {
                        input.attr("data-identificacionvalidation-msg", "Ingrese un Número de Cédula Válido");
                        return false;
                      }
                    }
                    return true;
                  }
                }
              },
              nombre: { validation: { required: true } },
              telefono: { validation: { required: true } },
              email: { validation: { required: true } },
              direccion: { editable: false, nullable: true }
            }
          }
        }
      });

      $("#grid").kendoGrid({
        dataSource: dataSource,
        pageable: true,
        filterable: true,
        height: 550,
        toolbar: [
