    function GestionRepresentantes() {
      dataSource = new kendo.data.DataSource({
        transport: {
          read: {
            url: "/buscarRepresentante",
            dataType: "json",
            type: "GET"
          },
          update: {
            url: "/modificarRepresentante",
            dataType: "json",
            type: "POST"
          },
          destroy: {
