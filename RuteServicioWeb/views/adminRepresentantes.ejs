          },
          {
            command: ["edit", "destroy"],
            title: "&nbsp;",
            width: "200px"
          }
        ],
        editable: { mode: "popup" },
        edit: function (e) {
          e.container.kendoWindow("title", "Gestión Representantes");
        }
      });
    }

    function mapa() {

      map = new google.maps.Map(document.getElementById('map'), {
        center: { lat: -0.213814, lng: -78.504127 },
        zoom: 12
      });

      marker = new google.maps.Marker({
        map: map,
        draggable: true,
        animation: google.maps.Animation.DROP,
        position: { lat: -0.213814, lng: -78.504127 }
      });
